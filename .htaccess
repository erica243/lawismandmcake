# Enable URL rewriting
RewriteEngine On

# Remove the .php extension from the URL for all PHP files
RewriteCond %{REQUEST_FILENAME}.php -f
RewriteRule ^(.*?)/$ $1.php [L]
RewriteRule ^(.*)$ $1.php [L]

# Optionally, force redirect to remove .php extension (if someone enters the URL with .php)
RewriteCond %{THE_REQUEST} \s/(.*\.php) [NC]
RewriteRule ^(.*)\.php$ /$1 [R=301,L]

# Ensure there is no conflict with query parameters (like ?order_id=133, ?page=home)
RewriteCond %{REQUEST_FILENAME}.php -f
RewriteRule ^(.*?)/$ $1.php [L]
