# Enable URL rewriting
RewriteEngine On

# Remove the .php extension from the URL if the file exists
RewriteCond %{REQUEST_FILENAME}.php -f
RewriteRule ^(.*)$ $1.php [L]

# Force redirect to remove .php extension (if someone enters the URL with .php)
RewriteCond %{THE_REQUEST} \s/index\.php [NC]
RewriteRule ^index\.php$ /index [R=301,L]

# Ensure other resources (CSS, JS, images, etc.) are not processed by PHP rules
RewriteCond %{REQUEST_FILENAME} !\.(css|js|jpg|jpeg|png|gif|svg|ico|mp4|webp|woff2|ttf|eot|otf)$

# Optionally, force trailing slashes for clean URLs (uncomment if desired)
