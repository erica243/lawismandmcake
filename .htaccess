# Enable URL rewriting
RewriteEngine On

# Remove the .php extension from URLs
RewriteCond %{REQUEST_FILENAME}.php -f
RewriteRule ^(.*)$ $1.php [L]

# Redirect to remove .php extension (optional, ensures consistency)
RewriteCond %{THE_REQUEST} \s([^.]+)\.php [NC]
RewriteRule ^(.*)\.php$ /$1 [R=301,L]

# Optional: Handle index.php removal for cleaner URLs like `/` instead of `/index`
RewriteRule ^index$ / [L,R=301]
